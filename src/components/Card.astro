---

import images from '/pf.png';

export interface Props {
	title: string;
	body: string;
	href: string;
	qual: string;
	regid: string;
}

const { href, title, body, qual, regid } = Astro.props;
---

<li class="link-card">
	<img src={images}></img>
	<a href={href}>
		<h2>
			Name: {title}
			<!-- <span>&rarr;</span> -->
		</h2>
		<p>
			Designation: {body} <br/>
			Qualification: {qual}<br/>
			Registration Id: {regid}
		</p>
	</a>
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 0.25rem;
		background-color: white;
		background-image: none;
		background-size: 400%;
		border-radius: 0.6rem;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
	}

	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.9;
		padding: 1rem 1.3rem;
		border-radius: 0.35rem;
		color: #111;
		background-color: white;
		opacity: 0.8;
	}
	h2, p {
		margin: 0;
		font-size: 1.25rem;
		font-weight: bold;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}

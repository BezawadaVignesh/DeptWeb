---
export interface Props {
	title: string;
}
import NavElem from '../components/NavElem.astro';
import Logo from '../components/Logo.astro'
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		
		<section class="header" style="box-shadow: 0px 2px 9px 1px rgb(25 25 25 / 28%);">
			<div class="social-media">
				<Logo />
				<p class="align-items-center justify-content-center">
				<a href="#" >
					<span class="fa fa-facebook">
						<i class="sr-only">Facebook</i>
					</span>
				</a>
				<a href="#" class="align-items-center justify-content-center">
					<span class="fa fa-twitter">
						<i class="sr-only">Twitter</i>
					</span>
				</a>
				<a href="#" class="align-items-center justify-content-center">
					<span class="fa fa-instagram">
						<i class="sr-only">Instagram</i>
					</span>
				</a>
				<a href="#" class="align-items-center justify-content-center">
					<span class="fa fa-youtube">
						<i class="sr-only">Dribbble</i>
					</span>
				</a>
				<a href="#" class="align-items-center justify-content-center">
					<span class="fa fa-linkedin">
						<i class="sr-only">Dribbble</i>
					</span>
				</a>
				</p>
				<!--h1 class="dept_title">DEPARTMENT OF <br>COMPUTER SCIENCE AND ENGINEERING</h1-->
			</div>
		</section>
		<div class="menu-button" onclick="this.classList.toggle('change');let obj = document.getElementsByTagName('nav')[0];if(obj.style.display != 'block'){obj.style.display = 'block'}else{obj.style.display = 'none'}">
        <!-- <button style="position: sticky;top:0" onclick="let obj = document.getElementsByTagName('nav')[0];if(obj.style.display == 'none'){obj.style.display = 'block'}else{ -->
            <!-- obj.style.display = 'none';}">=</button>  -->
			<div class="bar1"></div>
			<div class="bar2"></div>
			<div class="bar3"></div>
		</div>
		<div class="main">
            <nav>
				<ul>
					<NavElem text="Home" link="/" ><i class="fa fa-home" style="font-size: larger;padding-top: 0.2em;"></i></NavElem>
					<NavElem text="Syllabus" link="#" ><i class="fa fa-book" style="font-size: larger;padding-top: 0.2em;"></i></NavElem>
					
					<NavElem text="Programs" link="#" ><i class="fa fa-calendar" style="font-size: larger;padding-top: 0.2em;"></i></NavElem>
					<NavElem text="Faculty"  link="/faculty-list" drop_link={[['hello', 'Link 1'],['hello', 'Link 2']]}><i class="fa fa-users" style="font-size: larger;padding-top: 0.2em;"></i></NavElem>
					<NavElem text="Lab Details"  link="#" ><i class="fa fa-desktop" style="font-size: larger;padding-top: 0.2em;"></i></NavElem>
					<NavElem text="Achievements"  link="#" ><i class="fa fa-trophy" style="font-size: larger;padding-top: 0.2em;"></i></NavElem>
					<NavElem text="Projects"  link="#" ><i class="fa fa-file" style="font-size: larger;padding-top: 0.2em;"></i></NavElem>
					<NavElem text="Seminars/\nWorkshops"  link="#" ><i class="fa fa-desktop" style="font-size: larger;padding-top: 0.2em;"></i></NavElem>
				</ul>
			</nav>
		<slot />
		</div>
	</body>
</html>
<style>
	@keyframes slidein {
  from {
    width: 0%;
  }

  to {
    width: 300px;
  }
}
    .main {
        display: flex;
        & nav {
            position: sticky;
            top: 100px;
            height: calc( 100vh - 100px);
            background-color: var(--navbar-color);/*rgb(77, 73, 73);*/
            color: white;
			width: 300px;
			animation-duration: 0.5s;
  animation-name: slidein;

            /* border-radius: 10px 10px 10px 10px; */
        }
        & nav ul{
            list-style: none;
            display: flex;
            flex-direction: column;
            justify-content:space-evenly;
        }

        @media only screen and (max-width: 800px){
            .main nav{
                top:0;
            }
        }
        
    }
	.menu-button {
		display: inline-block;
		cursor: pointer;
	}

		.bar1, .bar2, .bar3 {
		width: 35px;
		height: 5px;
		background-color: #333;
		margin: 6px 0;
		transition: 0.4s;
		}

		.change .bar1 {
		transform: translate(0, 11px) rotate(-45deg);
		}

		.change .bar2 {opacity: 0;}
		/* .change{
			display: block;
		} */
		.change .bar3 {
		transform: translate(0, -11px) rotate(45deg);
		}

	/* button{
		width:30px;
		height: 30px;
        display: none;
    } */
	.menu-button{
		display: none;
	}
	@media only screen and (max-width: 400px){
		.menu-button {
			display: block;
		}
		.main nav{
			display:none;
		}
	}
</style>

<style is:global>
		@import url("https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700;800;900&display=swap");

	:root {
		--navbar-color : #000000;
		--navbar-font-color : #ffffff;
		--card1-color: rgb(28, 30, 36);
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
	}
	*{
		margin: 0;
		padding: 0;
	}
	@font-face {
		font-family: tfont;
		src: url('SairaCondensed-Regular.ttf');
	}
	html {
		font-family: system-ui, sans-serif;
		background-color: #F6F6F6;
	}
	
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}

	.header{
		position:sticky;
		top:0;
		z-index: 1;
		background-color: #f6f6f6;
	}

	@media only screen and (max-width: 800px){
		.header{
			position: static;
			width: 100%;
		}
		.social-media{
			flex-direction: column;
			align-items: center;
		}
		ul{
			flex-direction: column;
		}
		dd p{
			padding: 0px;
		}
		
	}
	/* NavElem.astro */
    .nav-ele {
            padding: 1rem 20px 0px 20px;
        }

    .dropdown-content{
        left:100%;
        top:10px;
    }
    /* end for NavElem.astro */

	.social-media{
		padding: 10px 0 10px 0 ;
		display: flex;
		justify-content: space-evenly;
	}
	
	.social-media p{
		display: inline-flex;
		align-items: center;
	}
	.social-media p a {
		text-decoration: none;
		color: #4d4d4d;
		font-size: 15px;
		aspect-ratio: 1/1;
		border-radius: 50%;
		box-shadow: 0px 0px 3px 1px #888;
		padding: 0.4em 0.65em;
		margin: 0.5em;
	}
	.social-media p a:hover {
		
		box-shadow: -3px 2px 6px 1px #888;
		
	}
	.social-media p a:has(.fa-youtube):hover {
		background-color: red;
		color:white;
	}
	.social-media p a:has(.fa-facebook):hover {
		background-color: #3b5998;
		color:white;
	}
	.social-media p a:has(.fa-twitter):hover {
		background-color: #1D9BF0;
		color:white;
	}
	
	.social-media p a:has(.fa-instagram):hover {
		background:linear-gradient(-135deg, #405de6, #5851db, #833ab4, #c13584,
		 #e1306c, #fd1d1d,#F56040, #F77737,#FCAF45, #FFDC80, #FFDC80);
		color:white;
	}
	.social-media p a:has(.fa-linkedin):hover {
		background:#0A66C2;
		color:white;
	}
	.dept_title{
		padding-top: 2rem;
		padding-bottom: 2rem;
		text-align: center;
		display: inline;
		font-weight: 400;
		font-family: math;/*'Courier New', Courier, monospace;*/
	}
	
	

</style>

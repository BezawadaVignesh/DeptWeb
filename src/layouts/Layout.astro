---
export interface Props {
	title: string;
}
import NavElem from '../components/NavElem.astro';
import Logo from '../components/Logo.astro'
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		
		<section class="header" style="box-shadow: 0px 2px 9px 1px rgb(25 25 25 / 28%);border-radius: 0px 0px 10px 10px;">
			<div class="social-media">
				<Logo />
				<p class="align-items-center justify-content-center">
				<a href="#" >
					<span class="fa fa-facebook">
						<i class="sr-only">Facebook</i>
					</span>
				</a>
				<a href="#" class="align-items-center justify-content-center">
					<span class="fa fa-twitter">
						<i class="sr-only">Twitter</i>
					</span>
				</a>
				<a href="#" class="align-items-center justify-content-center">
					<span class="fa fa-instagram">
						<i class="sr-only">Instagram</i>
					</span>
				</a>
				<a href="#" class="align-items-center justify-content-center">
					<span class="fa fa-youtube">
						<i class="sr-only">Dribbble</i>
					</span>
				</a>
				<a href="#" class="align-items-center justify-content-center">
					<span class="fa fa-linkedin">
						<i class="sr-only">Dribbble</i>
					</span>
				</a>
				</p>
				<!--h1 class="dept_title">DEPARTMENT OF <br>COMPUTER SCIENCE AND ENGINEERING</h1-->
			</div>
			
			<nav>
				<ul>
					<NavElem text="Home" link="/" />
					<NavElem text="Syllabus" link="#" />
					
					<NavElem text="Programs" link="#" />
					<NavElem text="Faculty"  link="/faculty-list" drop_link={[['hello', 'Link 1']]}/>
					<NavElem text="Lab Details"  link="#" />
					<NavElem text="Achievements"  link="#" />
					<NavElem text="Projects"  link="#" />
					<NavElem text="Seminars/Workshops"  link="#" />
				</ul>
			</nav>
		</section>
		<div>
		<slot />
		</div>
	</body>
</html>
<style is:global>
		@import url("https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700;800;900&display=swap");

